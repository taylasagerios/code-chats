{{!-- Login Page --}}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h2> Login</h2>
            <form class="form login-form">
                <div class="form-group mb-2">
                    <label class="form-label" type="text" id="email-login">Email: </label>
                    <input class="form-control" type="text" id="email-login" />
                </div>
                <div class="form-group mb-2">
                    <label class="password-login">Email:</label>
                    <input class="form-control" type="password" id="password-login" />
                </div>
                <div class="form-group">
                    <button class="btn btn-dark" type="submit">Login</button>
                </div>
            </form>
        </div>

        <div class="col-md-6">
            <h2>Sign Up</h2>
            <form class="form signup-form">
                <div class="form-group mb-2">
                    <label class="name-signup">Name:</label>
                    <input class="form-control" type="text" id="name-signup" />
                </div>
                <div class="form-group mb-2">
                    <label class="email-signup">Email:</label>
                    <input class="form-control" type="text" id="email-signup" />
                </div>
                <div class="form-group mb-2">
                    <label class="password-signup">password:</label>
                    <input class="form-control" type="text" id="password-signup" />
                </div>
                <div class="form-group">
                    <button class="btn btn-dark" type="submit">Signup</button>
                </div>
            </form>
        </div>
    </div>
</div>

<script src="./js/login.js"></script>